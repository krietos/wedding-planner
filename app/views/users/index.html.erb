<h1>Users</h1>
<h2><%= flash[:notice] %></h2>
<ul>
  <% @users.each do |user| %>
    <li><a href='/users/<%= user.id %>'><%= user.name %></a></li>
  <% end %>
</ul>

<h2>New user</h2>
<form id="create_user" method="post" action="/users">
  <input id="user_name" name="user[name]" type="text" placeholder="user Name">
  <input id="user_budget" name="user[budget]" type="text" placeholder="Budget">
  <button>Create User</button>
</form>
